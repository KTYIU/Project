<Window x:Class="Railway.DeleteInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Railway"
        mc:Ignorable="d"
        Title="DeleteInput" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="usrnm" HorizontalAlignment="Left" Margin="344,142,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="trainName" HorizontalAlignment="Left" Margin="344,261,0,0" Text="Track Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,105,0,0" Text="Enter your username:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Text="Enter the name of the train you want to remove:" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <Button Content="Delete" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
